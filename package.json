{
  "name": "now-sync",
  "version": "0.10.1",
  "description": "A tool to help developers sync their JavaScript resources with ServiceNow.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:time": "TIMING=1 npm run lint",
    "prettier": "prettier --ignore-path ./.eslintignore --write \"{**,!dist}/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "postcheckout": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package.json && yarn install",
    "postmerge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package.json && yarn install",
    "precommit": "lint-staged"
  },
  "author": "Kai Yao",
  "license": "MIT",
  "bin": {
    "now": "bin/now"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.7.0",
    "commander": "^2.9.0",
    "inquirer": "^3.0.6",
    "js-yaml": "^3.8.4",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "node-fetch": "^1.6.3",
    "ora": "^1.2.0",
    "path-to-regexp": "^1.7.0",
    "roadrunner": "^1.1.0",
    "rx": "^4.1.0",
    "yeoman-environment": "^1.6.6",
    "yeoman-generator": "^1.1.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.3",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.2",
    "rewire": "^2.5.2",
    "yarn": "^1.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint:fix",
      "test",
      "git add"
    ]
  }
}
