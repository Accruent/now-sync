{
  "name": "now-sync",
  "version": "0.12.1",
  "description": "A tool to help developers sync their JavaScript resources with ServiceNow.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:time": "TIMING=1 npm run lint",
    "prettier": "prettier --ignore-path ./.eslintignore --write \"{**,!dist}/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "git:changed": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package.json",
    "git:nochangedmsg": "echo \"package.json not changed, not running yarn.\"",
    "postcheckout": "npm run git:changed && yarn install || npm run git:nochangedmsg",
    "postmerge": "npm run git:changed && yarn install || npm run git:nochangedmsg",
    "precommit": "lint-staged"
  },
  "author": "Kai Yao",
  "license": "MIT",
  "bin": {
    "now": "bin/now"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.3.0",
    "chokidar": "^1.7.0",
    "inquirer": "^3.0.6",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.19.2",
    "node-fetch": "^1.7.3",
    "ora": "^1.3.0",
    "path-to-regexp": "^2.1.0",
    "roadrunner": "^1.1.0",
    "rx": "^4.1.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "rewire": "^3.0.2",
    "yarn": "^1.3.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint:fix",
      "test",
      "git add"
    ]
  }
}
